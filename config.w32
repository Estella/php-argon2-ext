ARG_WITH("argon2", "Argon2 support", "no");

if (PHP_ARGON2 != "no") {
	if (CHECK_LIB("Argon2Ref.lib", null, PHP_ARGON2)
	&& CHECK_HEADER_ADD_INCLUDE("argon2.h", "CFLAGS")) {
		AC_DEFINE('HAVE_ARGON2LIB', 1);
	} else {
		WARNING("Argon2 not enabled; libaries and headers not found");
	}
}